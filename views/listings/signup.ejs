<% layout('/layouts/boilerplate') -%>

<div class="row">
    <div class="col-md-6 offset-md-2">
        <% if (locals.errorMsg) { %>
            <div class="alert alert-danger">
                <%= errorMsg %>
            </div>
        <% } %>
    <div class="col-md-6 offset-md-2">
        <h3 class="col-md-6 offset-md-4">SignUp</h3>
        <form action="/signup" method="post"  class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label"><i>Username </i></label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="valid-feedback">Username looks good</div>
                <div class="invalid-feedback">Username must be unique</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label"><i>Email </i></label>
                <input type="email" name="email" id="email" class="form-control" required>
                <div class="valid-feedback">Email looks good</div>
                <div class="invalid-feedback">Email is required</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label"><i>Password </i></label>
                <input type="password" name="password" id="password" class="form-control" required>
                <div class="valid-feedback">Password looks good</div>
                <div class="invalid-feedback">Password is required</div>
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>