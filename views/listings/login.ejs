<% layout('/layouts/boilerplate') -%>

<div class="row">
    <br><br><br>
    <div class="col-md-6 offset-md-3 mb-6 mt-5">
        <% if (locals.errorMsg) { %>
            <div class="alert alert-danger">
                <%= errorMsg %>
            </div>
        <% } %>
    <div class="col-md-6 offset-md-2 mb-5">
        <h3 class="col-md-6 offset-md-4 mt-4">Login</h3>
        <form action="/login" method="post"  class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label"><i>Username </i></label>
                <input type="text" name="username" id="username" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label"><i>Password </i></label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>
            <button class="btn btn-success mb-5">LogIn</button>
        </form>
    </div>
    <br><br><br><br>
</div>